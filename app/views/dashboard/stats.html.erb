<!-- app/views/dashboard/stats.html.erb -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div class="d-flex align-items-center">
    <%= link_to root_path, class: "btn btn-outline-secondary me-3" do %>
      <i class="bi bi-arrow-left"></i>
    <% end %>
    <h1 class="mb-0">
      <i class="bi bi-bar-chart"></i>
      League Statistics
    </h1>
  </div>
</div>

<% if @teams_with_stats.any? %>
  <!-- League Table -->
  <div class="card mb-4">
    <div class="card-header">
      <h5 class="mb-0">
        <i class="bi bi-trophy"></i>
        League Table
      </h5>
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-dark">
            <tr>
              <th>Pos</th>
              <th>Team</th>
              <th>MP</th>
              <th>W</th>
              <th>D</th>
              <th>L</th>
              <th>GF</th>
              <th>GA</th>
              <th>GD</th>
              <th>Pts</th>
            </tr>
          </thead>
          <tbody>
            <% @teams_with_stats.each_with_index do |team_stats, index| %>
              <tr class="<%= 'table-success' if index == 0 %>">
                <td>
                  <strong><%= index + 1 %></strong>
                  <% if index == 0 %>
                    <i class="bi bi-trophy text-warning ms-1"></i>
                  <% end %>
                </td>
                <td>
                  <%= link_to team_stats[:team], class: "text-decoration-none" do %>
                    <strong><%= team_stats[:team].name %></strong>
                  <% end %>
                  <br>
                  <small class="text-muted"><%= team_stats[:team].city %></small>
                </td>
                <td><%= team_stats[:matches_played] %></td>
                <td class="text-success"><%= team_stats[:wins] %></td>
                <td class="text-warning"><%= team_stats[:draws] %></td>
                <td class="text-danger"><%= team_stats[:losses] %></td>
                <td><%= team_stats[:goals_for] %></td>
                <td><%= team_stats[:goals_against] %></td>
                <td class="<%= team_stats[:goals_for] - team_stats[:goals_against] >= 0 ? 'text-success' : 'text-danger' %>">
                  <%= sprintf("%+d", team_stats[:goals_for] - team_stats[:goals_against]) %>
                </td>
                <td><strong><%= team_stats[:points] %></strong></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="card-footer">
      <small class="text-muted">
        <strong>Legend:</strong>
        MP = Matches Played, W = Wins, D = Draws, L = Losses, 
        GF = Goals For, GA = Goals Against, GD = Goal Difference, Pts = Points (3 for win, 1 for draw)
      </small>
    </div>
  </div>

  <div class="row">
    <!-- Top Performers -->
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="bi bi-star"></i>
            Top Performers
          </h5>
        </div>
        <div class="card-body">
          <h6 class="text-muted">Highest Scoring Teams</h6>
          <% top_scorers = @teams_with_stats.sort_by { |stats| -stats[:goals_for] }.first(3) %>
          <% top_scorers.each_with_index do |team_stats, index| %>
            <div class="d-flex justify-content-between align-items-center mb-2">
              <div>
                <% if index == 0 %>
                  <i class="bi bi-trophy text-warning me-1"></i>
                <% elsif index == 1 %>
                  <i class="bi bi-award text-secondary me-1"></i>
                <% else %>
                  <i class="bi bi-award text-warning me-1"></i>
                <% end %>
                <%= team_stats[:team].name %>
              </div>
              <span class="badge bg-success"><%= team_stats[:goals_for] %> goals</span>
            </div>
          <% end %>

          <hr>

          <h6 class="text-muted">Best Defense</h6>
          <% best_defense = @teams_with_stats.sort_by { |stats| stats[:goals_against] }.first(3) %>
          <% best_defense.each_with_index do |team_stats, index| %>
            <div class="d-flex justify-content-between align-items-center mb-2">
              <div>
                <% if index == 0 %>
                  <i class="bi bi-shield-check text-primary me-1"></i>
                <% elsif index == 1 %>
                  <i class="bi bi-shield text-info me-1"></i>
                <% else %>
                  <i class="bi bi-shield text-secondary me-1"></i>
                <% end %>
                <%= team_stats[:team].name %>
              </div>
              <span class="badge bg-primary"><%= team_stats[:goals_against] %> conceded</span>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- League Statistics -->
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="bi bi-graph-up"></i>
            League Overview
          </h5>
        </div>
        <div class="card-body">
          <%
            total_matches = @teams_with_stats.sum { |stats| stats[:matches_played] } / 2
            total_goals = @teams_with_stats.sum { |stats| stats[:goals_for] }
            avg_goals_per_match = total_matches > 0 ? (total_goals.to_f / total_matches).round(2) : 0
            total_wins = @teams_with_stats.sum { |stats| stats[:wins] }
            total_draws = @teams_with_stats.sum { |stats| stats[:draws] }
          %>
          
          <div class="row text-center mb-3">
            <div class="col-6">
              <h4><%= total_matches %></h4>
              <small class="text-muted">Total Matches</small>
            </div>
            <div class="col-6">
              <h4><%= total_goals %></h4>
              <small class="text-muted">Total Goals</small>
            </div>
          </div>
          
          <div class="row text-center mb-3">
            <div class="col-6">
              <h5><%= avg_goals_per_match %></h5>
              <small class="text-muted">Goals per Match</small>
            </div>
            <div class="col-6">
              <h5><%= @teams_with_stats.count %></h5>
              <small class="text-muted">Teams</small>
            </div>
          </div>
          
          <hr>
          
          <h6 class="text-muted">Match Results</h6>
          <div class="mb-2">
            <div class="d-flex justify-content-between">
              <span>Wins:</span>
              <span class="text-success"><%= total_wins %></span>
            </div>
            <div class="d-flex justify-content-between">
              <span>Draws:</span>
              <span class="text-warning"><%= total_draws %></span>
            </div>
            <div class="d-flex justify-content-between">
              <span>Win Percentage:</span>
              <span><%= total_matches > 0 ? ((total_wins.to_f / (total_matches * 2)) * 100).round(1) : 0 %>%</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="text-center py-5">
    <i class="bi bi-bar-chart display-1 text-muted"></i>
    <h3 class="mt-3">No Statistics Available</h3>
    <p class="text-muted">Add teams and matches to see league statistics!</p>
    <div class="btn-group">
      <%= link_to "Add Teams", teams_path, class: "btn btn-primary" %>
      <%= link_to "Schedule Matches", matches_path, class: "btn btn-outline-primary" %>
    </div>
  </div>
<% end %>