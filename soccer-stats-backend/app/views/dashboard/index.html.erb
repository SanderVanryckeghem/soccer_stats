<!-- app/views/dashboard/index.html.erb -->
<div class="row">
  <div class="col-md-12">
    <h1 class="mb-4">
      <i class="bi bi-trophy"></i>
      Soccer Stats Dashboard
    </h1>
  </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card bg-primary text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h4><%= @total_teams %></h4>
            <p class="mb-0">Teams</p>
          </div>
          <div class="align-self-center">
            <i class="bi bi-people-fill fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-3">
    <div class="card bg-success text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h4><%= @total_players %></h4>
            <p class="mb-0">Players</p>
          </div>
          <div class="align-self-center">
            <i class="bi bi-person-badge fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-3">
    <div class="card bg-info text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h4><%= @total_matches %></h4>
            <p class="mb-0">Matches</p>
          </div>
          <div class="align-self-center">
            <i class="bi bi-calendar-event fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-3">
    <div class="card bg-warning text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <div>
            <h4><%= @recent_matches.count %></h4>
            <p class="mb-0">Recent</p>
          </div>
          <div class="align-self-center">
            <i class="bi bi-clock fs-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <!-- Recent Matches -->
  <div class="col-md-8">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
          <i class="bi bi-calendar-event"></i>
          Recent Matches
        </h5>
        <%= link_to "View All", matches_path, class: "btn btn-sm btn-outline-primary" %>
      </div>
      <div class="card-body">
        <% if @recent_matches.any? %>
          <% @recent_matches.each do |match| %>
            <div class="d-flex justify-content-between align-items-center border-bottom py-2">
              <div class="flex-grow-1">
                <div class="row align-items-center">
                  <div class="col-4 text-end">
                    <strong><%= match.home_team.name %></strong>
                  </div>
                  <div class="col-4 text-center">
                    <span class="badge bg-primary fs-6">
                      <%= match.home_score %> - <%= match.away_score %>
                    </span>
                  </div>
                  <div class="col-4">
                    <strong><%= match.away_team.name %></strong>
                  </div>
                </div>
                <div class="text-center text-muted small">
                  <%= match.match_date.strftime("%B %d, %Y") %>
                </div>
              </div>
              <div class="ms-3">
                <%= link_to match, class: "btn btn-sm btn-outline-secondary" do %>
                  <i class="bi bi-eye"></i>
                <% end %>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="text-muted text-center py-4">No matches recorded yet.</p>
        <% end %>
      </div>
    </div>
  </div>
  
  <!-- Quick Actions -->
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">
          <i class="bi bi-plus-circle"></i>
          Quick Actions
        </h5>
      </div>
      <div class="card-body">
        <div class="d-grid gap-2">
          <%= link_to new_team_path, class: "btn btn-outline-primary" do %>
            <i class="bi bi-plus"></i> Add Team
          <% end %>
          <%= link_to new_match_path, class: "btn btn-outline-success" do %>
            <i class="bi bi-plus"></i> Add Match
          <% end %>
          <%= link_to teams_path, class: "btn btn-outline-info" do %>
            <i class="bi bi-eye"></i> View Teams
          <% end %>
          <%= link_to stats_path, class: "btn btn-outline-warning" do %>
            <i class="bi bi-bar-chart"></i> View Stats
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- Top Players -->
    <div class="card mt-3">
      <div class="card-header">
        <h5 class="mb-0">
          <i class="bi bi-star"></i>
          Players
        </h5>
      </div>
      <div class="card-body">
        <% if @top_scorers.any? %>
          <% @top_scorers.each do |player| %>
            <div class="d-flex justify-content-between align-items-center border-bottom py-1">
              <div>
                <strong><%= player.name %></strong><br>
                <small class="text-muted"><%= player.team.name %></small>
              </div>
              <span class="badge bg-secondary"><%= player.position %></span>
            </div>
          <% end %>
        <% else %>
          <p class="text-muted">No players recorded yet.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>