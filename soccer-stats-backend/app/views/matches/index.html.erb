<!-- app/views/matches/index.html.erb -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>
    <i class="bi bi-calendar-event"></i>
    Matches
  </h1>
  <%= link_to "Schedule New Match", new_match_path, class: "btn btn-primary" %>
</div>

<!-- Filter -->
<% if @teams.any? %>
  <div class="card mb-4">
    <div class="card-body py-2">
      <%= form_with url: matches_path, method: :get, local: true, class: "d-flex align-items-center" do |form| %>
        <label class="form-label me-2 mb-0">Filter by team:</label>
        <%= form.select :team_id, 
            options_from_collection_for_select(@teams, :id, :name, params[:team_id]),
            { prompt: "All Teams" },
            { class: "form-select me-2", style: "width: auto;" } %>
        <%= form.submit "Filter", class: "btn btn-sm btn-outline-primary me-2" %>
        <% if params[:team_id].present? %>
          <%= link_to "Clear", matches_path, class: "btn btn-sm btn-outline-secondary" %>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>

<% if @matches.any? %>
  <div class="row">
    <% @matches.each do |match| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <!-- Match Teams -->
            <div class="text-center mb-3">
              <div class="row align-items-center">
                <div class="col-5">
                  <h6 class="mb-0"><%= match.home_team.name %></h6>
                  <small class="text-muted"><%= match.home_team.city %></small>
                </div>
                <div class="col-2">
                  <i class="bi bi-house text-muted"></i>
                </div>
                <div class="col-5">
                  <h6 class="mb-0"><%= match.away_team.name %></h6>
                  <small class="text-muted"><%= match.away_team.city %></small>
                </div>
              </div>
            </div>

            <!-- Score -->
            <div class="text-center mb-3">
              <h2 class="mb-1">
                <span class="<%= 'text-success' if match.home_score > match.away_score %>">
                  <%= match.home_score %>
                </span>
                <span class="text-muted">-</span>
                <span class="<%= 'text-success' if match.away_score > match.home_score %>">
                  <%= match.away_score %>
                </span>
              </h2>
              
              <% if match.draw? %>
                <span class="badge bg-warning text-dark">Draw</span>
              <% elsif match.winner %>
                <span class="badge bg-success">
                  <i class="bi bi-trophy"></i> <%= match.winner.name %>
                </span>
              <% end %>
            </div>

            <!-- Date -->
            <div class="text-center text-muted">
              <i class="bi bi-calendar"></i>
              <%= match.match_date.strftime("%b %d, %Y") %>
              <br>
              <small><%= match.match_date.strftime("%I:%M %p") %></small>
            </div>
          </div>
          
          <div class="card-footer bg-transparent">
            <div class="btn-group w-100" role="group">
              <%= link_to match, class: "btn btn-outline-primary btn-sm" do %>
                <i class="bi bi-eye"></i> View
              <% end %>
              <%= link_to edit_match_path(match), class: "btn btn-outline-secondary btn-sm" do %>
                <i class="bi bi-pencil"></i> Edit
              <% end %>
              <%= link_to match, 
                  class: "btn btn-outline-danger btn-sm",
                  data: { 
                    "turbo-method": :delete,
                    "turbo-confirm": "Are you sure you want to delete this match?" 
                  } do %>
                <i class="bi bi-trash"></i> Delete
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if params[:team_id].present? %>
    <div class="mt-4">
      <p class="text-muted">
        Showing matches for <strong><%= Team.find(params[:team_id]).name %></strong>
      </p>
    </div>
  <% end %>
<% else %>
  <div class="text-center py-5">
    <i class="bi bi-calendar-x display-1 text-muted"></i>
    <h3 class="mt-3">No Matches Yet</h3>
    <% if params[:team_id].present? %>
      <p class="text-muted">No matches found for the selected team.</p>
      <%= link_to "View All Matches", matches_path, class: "btn btn-outline-primary me-2" %>
    <% else %>
      <p class="text-muted">Schedule your first match to get started!</p>
    <% end %>
    <%= link_to "Schedule First Match", new_match_path, class: "btn btn-primary btn-lg" %>
  </div>
<% end %>