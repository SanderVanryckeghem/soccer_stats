<!-- app/views/players/show.html.erb -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div class="d-flex align-items-center">
    <%= link_to @player.team, class: "btn btn-outline-secondary me-3" do %>
      <i class="bi bi-arrow-left"></i>
    <% end %>
    <div>
      <h1 class="mb-0"><%= @player.name %></h1>
      <p class="text-muted mb-0">
        <span class="badge bg-secondary me-2"><%= @player.position %></span>
        <i class="bi bi-calendar"></i> Age <%= @player.age %>
      </p>
    </div>
  </div>
  <div class="btn-group">
    <%= link_to edit_team_player_path(@player.team, @player), class: "btn btn-outline-primary" do %>
      <i class="bi bi-pencil"></i> Edit
    <% end %>
    <%= link_to team_player_path(@player.team, @player), 
        class: "btn btn-outline-danger",
        data: { 
          "turbo-method": :delete,
          "turbo-confirm": "Are you sure you want to remove #{@player.name} from the team?" 
        } do %>
      <i class="bi bi-trash"></i> Remove
    <% end %>
  </div>
</div>

<div class="row">
  <!-- Player Info -->
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">
          <i class="bi bi-person-badge"></i>
          Player Information
        </h5>
      </div>
      <div class="card-body">
        <div class="mb-3">
          <strong>Name:</strong><br>
          <span class="fs-5"><%= @player.name %></span>
        </div>
        
        <div class="mb-3">
          <strong>Position:</strong><br>
          <span class="badge bg-secondary fs-6"><%= @player.position %></span>
        </div>
        
        <div class="mb-3">
          <strong>Age:</strong><br>
          <span class="text-muted"><%= @player.age %> years old</span>
        </div>
        
        <div class="mb-3">
          <strong>Team:</strong><br>
          <%= link_to @player.team.name, @player.team, class: "text-decoration-none" %>
          <br>
          <small class="text-muted"><%= @player.team.city %></small>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Team Context -->
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">
          <i class="bi bi-people"></i>
          Team: <%= @player.team.name %>
        </h5>
      </div>
      <div class="card-body">
        <div class="row text-center mb-4">
          <div class="col-3">
            <h4><%= @player.team.players.count %></h4>
            <small class="text-muted">Total Players</small>
          </div>
          <div class="col-3">
            <h4><%= @player.team.players.where(position: @player.position).count %></h4>
            <small class="text-muted"><%= @player.position.pluralize %></small>
          </div>
          <div class="col-3">
            <h4><%= @player.team.founded %></h4>
            <small class="text-muted">Founded</small>
          </div>
          <div class="col-3">
            <h4><%= @player.team.all_matches.count %></h4>
            <small class="text-muted">Matches</small>
          </div>
        </div>
        
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
          <%= link_to "View Full Team", @player.team, class: "btn btn-outline-primary" %>
          <%= link_to "Team Matches", matches_path(team_id: @player.team.id), class: "btn btn-outline-info" %>
        </div>
      </div>
    </div>
    
    <!-- Position teammates -->
    <div class="card mt-3">
      <div class="card-header">
        <h5 class="mb-0">
          <i class="bi bi-people-fill"></i>
          Other <%= @player.position.pluralize %>
        </h5>
      </div>
      <div class="card-body">
        <% teammates = @player.team.players.where(position: @player.position).where.not(id: @player.id) %>
        <% if teammates.any? %>
          <% teammates.each do |teammate| %>
            <div class="d-flex justify-content-between align-items-center border-bottom py-2">
              <div>
                <strong><%= teammate.name %></strong><br>
                <small class="text-muted">Age <%= teammate.age %></small>
              </div>
              <div>
                <%= link_to team_player_path(@player.team, teammate), class: "btn btn-sm btn-outline-primary" do %>
                  <i class="bi bi-eye"></i>
                <% end %>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="text-muted text-center py-3">
            No other <%= @player.position.downcase.pluralize %> in the team.
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>