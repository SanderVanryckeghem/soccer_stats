<!-- app/views/teams/_form.html.erb -->
<%= form_with model: team, local: true, class: "needs-validation", novalidate: true do |form| %>
  <% if team.errors.any? %>
    <div class="alert alert-danger">
      <h5>Please fix the following errors:</h5>
      <ul class="mb-0">
        <% team.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, 
            class: "form-control #{'is-invalid' if team.errors[:name].any?}",
            placeholder: "Enter team name",
            required: true %>
        <% if team.errors[:name].any? %>
          <div class="invalid-feedback">
            <%= team.errors[:name].first %>
          </div>
        <% end %>
      </div>
    </div>
    
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :city, class: "form-label" %>
        <%= form.text_field :city, 
            class: "form-control #{'is-invalid' if team.errors[:city].any?}",
            placeholder: "Enter city",
            required: true %>
        <% if team.errors[:city].any? %>
          <div class="invalid-feedback">
            <%= team.errors[:city].first %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :founded, "Year Founded", class: "form-label" %>
        <%= form.number_field :founded, 
            class: "form-control #{'is-invalid' if team.errors[:founded].any?}",
            placeholder: "e.g., 1995",
            min: 1800,
            max: Date.current.year %>
        <% if team.errors[:founded].any? %>
          <div class="invalid-feedback">
            <%= team.errors[:founded].first %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="mb-3">
    <%= form.submit class: "btn btn-primary me-2" %>
    <%= link_to "Cancel", team.persisted? ? team : teams_path, class: "btn btn-secondary" %>
  </div>
<% end %>