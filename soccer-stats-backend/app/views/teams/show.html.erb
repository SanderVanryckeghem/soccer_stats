<!-- app/views/teams/show.html.erb -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div class="d-flex align-items-center">
    <%= link_to teams_path, class: "btn btn-outline-secondary me-3" do %>
      <i class="bi bi-arrow-left"></i>
    <% end %>
    <div>
      <h1 class="mb-0"><%= @team.name %></h1>
      <p class="text-muted mb-0">
        <i class="bi bi-geo-alt"></i> <%= @team.city %> | 
        <i class="bi bi-calendar"></i> Founded <%= @team.founded %>
      </p>
    </div>
  </div>
  <div class="btn-group">
    <%= link_to edit_team_path(@team), class: "btn btn-outline-primary" do %>
      <i class="bi bi-pencil"></i> Edit
    <% end %>
    <%= link_to new_team_player_path(@team), class: "btn btn-success" do %>
      <i class="bi bi-plus"></i> Add Player
    <% end %>
  </div>
</div>

<div class="row">
  <!-- Team Stats -->
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">Team Statistics</h5>
      </div>
      <div class="card-body">
        <div class="row text-center">
          <div class="col-4">
            <h4 class="text-success"><%= @team_stats[:wins] %></h4>
            <small>Wins</small>
          </div>
          <div class="col-4">
            <h4 class="text-warning"><%= @team_stats[:draws] %></h4>
            <small>Draws</small>
          </div>
          <div class="col-4">
            <h4 class="text-danger"><%= @team_stats[:losses] %></h4>
            <small>Losses</small>
          </div>
        </div>
        <hr>
        <div class="row text-center">
          <div class="col-6">
            <h5><%= @team_stats[:points] %></h5>
            <small>Points</small>
          </div>
          <div class="col-6">
            <h5><%= @team_stats[:matches_played] %></h5>
            <small>Played</small>
          </div>
        </div>
        <hr>
        <div class="row text-center">
          <div class="col-6">
            <h6 class="text-success"><%= @team_stats[:goals_for] %></h6>
            <small>Goals For</small>
          </div>
          <div class="col-6">
            <h6 class="text-danger"><%= @team_stats[:goals_against] %></h6>
            <small>Goals Against</small>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Players -->
  <div class="col-md-8">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Squad (<%= @players.count %>)</h5>
        <%= link_to "Add Player", new_team_player_path(@team), class: "btn btn-sm btn-success" %>
      </div>
      <div class="card-body">
        <% if @players.any? %>
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Position</th>
                  <th>Age</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @players.each do |player| %>
                  <tr>
                    <td>
                      <%= link_to player.name, team_player_path(@team, player), class: "text-decoration-none" %>
                    </td>
                    <td>
                      <span class="badge bg-secondary"><%= player.position %></span>
                    </td>
                    <td><%= player.age %></td>
                    <td>
                      <div class="btn-group btn-group-sm">
                        <%= link_to team_player_path(@team, player), class: "btn btn-outline-primary btn-sm" do %>
                          <i class="bi bi-eye"></i>
                        <% end %>
                        <%= link_to edit_team_player_path(@team, player), class: "btn btn-outline-secondary btn-sm" do %>
                          <i class="bi bi-pencil"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-4">
            <i class="bi bi-person-plus display-4 text-muted"></i>
            <h5 class="mt-3">No Players Yet</h5>
            <p class="text-muted">Add players to build your squad!</p>
            <%= link_to "Add First Player", new_team_player_path(@team), class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Recent Matches -->
<div class="row mt-4">
  <div class="col-12">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Recent Matches</h5>
        <%= link_to "View All Matches", matches_path(team_id: @team.id), class: "btn btn-sm btn-outline-primary" %>
      </div>
      <div class="card-body">
        <% if @recent_matches.any? %>
          <% @recent_matches.each do |match| %>
            <div class="d-flex justify-content-between align-items-center border-bottom py-3">
              <div class="flex-grow-1">
                <div class="row align-items-center">
                  <div class="col-md-4 text-end">
                    <strong class="<%= 'text-primary' if match.home_team == @team %>">
                      <%= match.home_team.name %>
                    </strong>
                  </div>
                  <div class="col-md-4 text-center">
                    <span class="badge bg-<%= match.winner == @team ? 'success' : (match.draw? ? 'warning' : 'danger') %> fs-6">
                      <%= match.home_score %> - <%= match.away_score %>
                    </span>
                    <br>
                    <small class="text-muted">
                      <%= match.match_date.strftime("%b %d, %Y") %>
                    </small>
                  </div>
                  <div class="col-md-4">
                    <strong class="<%= 'text-primary' if match.away_team == @team %>">
                      <%= match.away_team.name %>
                    </strong>
                  </div>
                </div>
              </div>
              <div class="ms-3">
                <%= link_to match, class: "btn btn-sm btn-outline-secondary" do %>
                  <i class="bi bi-eye"></i>
                <% end %>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-4">
            <i class="bi bi-calendar-x display-4 text-muted"></i>
            <h5 class="mt-3">No Matches Yet</h5>
            <p class="text-muted">This team hasn't played any matches.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>